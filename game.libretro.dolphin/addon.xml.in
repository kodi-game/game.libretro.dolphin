<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.dolphin"
		name="Nintendo - GameCube / Wii (Dolphin)"
		version="3.0.0.10"
		provider-name="Team Dolphin">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>NGC</platforms>
		<extensions>elf|dol|gcm|iso|tgc|wbfs|ciso|gcz|wad|wia|rvz|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.dolphin</source>
		<summary lang="en_GB">Nintendo - GameCube / Wii (Dolphin) 4ffaf058</summary>
		<description lang="da_DK">Dolphin er en emulator til to nyere Nintendo-videospilkonsoller: GameCube og Wii.</description>
		<description lang="en_GB">Dolphin is an emulator for two recent Nintendo video game consoles: the GameCube and the Wii.</description>
	</extension>
</addon>
